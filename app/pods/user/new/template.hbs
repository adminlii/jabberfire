{{#jf-page id='user'}}
  {{#jf-page-title}}Add New User{{/jf-page-title}}
  {{#jf-page-bar}}
    {{#jf-page-actions}}
      {{#jf-page-action-button}}
          Actions {{fa-icon icon='angle-down'}}
      {{/jf-page-action-button}}
      {{#jf-page-action-list}}
        {{#jf-page-action}}
          {{#link-to 'user.new'}}Change Status{{/link-to}}
        {{/jf-page-action}}
        {{#jf-page-action}}
          {{#link-to 'user.new'}}Set Role{{/link-to}}
        {{/jf-page-action}}
      {{/jf-page-action-list}}
    {{/jf-page-actions}}
  {{/jf-page-bar}}
  <!-- END PAGE HEADER-->
  <!-- BEGIN PAGE CONTENT-->
  {{#jf-page-content-container}}
      <!-- BEGIN SAMPLE FORM PORTLET-->
      <div class="portlet light bordered" xmlns="http://www.w3.org/1999/html">
          <div class="portlet-title">
              <div class="caption font-red-sunglo">
                  <span class="caption-subject bold uppercase">User Details</span>
              </div>
          </div>

          <div class="portlet-body form">
              <form role="form">
                  <div class="form-body">
                      <div class="row">
                          <div class="col-md-6">
                              <div id='firstname' class="form-group form-md-line-input has-default form-md-floating-label">
                                  <div class="input-icon right">
                                      {{input type='text' class='form-control' value=firstname}}
                                      <label for="first-name-control">First Name</label>
                                      <span class="help-block"></span>
                                      <i class="icon-user"></i>
                                  </div>
                              </div>
                              <div id='lastname' class="form-group form-md-line-input has-default form-md-floating-label">
                                  <div class="input-icon right">
                                    {{input type='text' class='form-control' value=lastname }}
                                      <label for="last-name-control">Last Name</label>
                                      <span class="help-block"></span>
                                      <i class="icon-user"></i>
                                  </div>
                              </div>
                              <div id='email' class="form-group form-md-line-input has-default form-md-floating-label">
                                  <div class="input-icon right">
                                    {{input type='text' class='form-control' value=email }}
                                      <label for="email-control">Email</label>
                                      <span class="help-block"></span>
                                      <i class="icon-envelope"></i>
                                  </div>
                              </div>
                              <div class="form-group form-md-line-input has-default form-md-floating-label">
                                  <div class="input-icon right">
                                    {{input type='text' class='form-control' value=employee_id id='employee_id'}}
                                      <label for="employee-id-control">Employee ID</label>
                                      <span class="help-block"></span>
                                      <i class="fa fa-empire"></i>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <div class="col-md-12">
                                      <ul class="list-unstyled">
                                        {{#each department in selectedDepartmentsObserver}}
                                            <li style="margin-bottom: 5px;">
                                                <button type="button" class="btn default btn-xs">
                                                    <span class="md-click-circle md-click-animate"></span>
                                                  {{#each dept in department}}{{dept.name}}{{fa-icon icon='arrow-right'}}{{/each}}
                                                </button>
                                            </li>
                                        {{/each}}
                                      </ul>
                                  </div>

                                  <div class="col-md-11">

                                    {{#ember-chosen multiple=true id='department_select' value=multipleSelectValue }}
                                      {{#each department in options}}
                                          <option {{bind-attr value=department.id}}>{{department.name}}</option>
                                      {{/each}}
                                    {{/ember-chosen}}
                                  </div>
                                  <div class="col-md-1">
                                      <a{{action 'didTouchUpOnAddDepartment'}}
                                              class="btn btn-icon-only green pull-right">
                                          <i class="fa fa-plus"></i>
                                      </a>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-6">

                              <div class="form-group">
                                  <label for="status-control">Status</label>
                                {{#ember-chosen id='status_select' value=selectedStatus }}
                                  {{#each status in statuses}}
                                      <option {{bind-attr value=status.id}}>{{status.name}}</option>
                                  {{/each}}
                                {{/ember-chosen}}
                              </div>

                              <div class="form-group">
                                  <label for="role-control">Role</label>
                                {{#ember-chosen id='role_select' value=selectedRole }}
                                  {{#each role in roles}}
                                      <option {{bind-attr value=role.id}}>{{role.name}}</option>
                                  {{/each}}
                                {{/ember-chosen}}
                              </div>
                          </div>

                      </div>
                  </div>
                  <div class="row">
                      <div class="col-md-12">
                          <div class="form-actions noborder pull-right">
                              <button type="button" class="btn default">Cancel</button>
                              <button type="button" class="btn blue" {{action 'didTouchUpOnSave'}}>Save</button>
                          </div>
                      </div>
                  </div>

              </form>
          </div>
      </div>
      <!-- END SAMPLE FORM PORTLET-->

  {{/jf-page-content-container}}
  <!-- END PAGE CONTENT-->
{{/jf-page}}