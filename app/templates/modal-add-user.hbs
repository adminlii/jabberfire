
        {{modal-header title='Add New User' x-action='close'}}
        <div class="modal-body">
            <form action="#" class="form-horizontal" id="add-user-form">
                <div class="form-body">

                    <!-- START FIRST NAME -->

                    <div class="form-group">

                        <label class="col-md-4 control-label">First Name</label>

                        <div class="col-md-5">
                          {{form-group-input
                          label-text='First Name'
                          inputID='firstname'
                          input-type='text'
                          input-placeholder='First Name'
                          inputValue=firstname
                          input-classes='form-control '
                          input-errors=errors.firstname}}
                        </div>
                    </div>
                    <!-- END FIRST NAME -->

                    <!-- START LAST NAME -->
                    <div class="form-group">

                        <label class="col-md-4 control-label">Last Name</label>

                        <div class="col-md-5">
                          {{form-group-input
                          label-text='Last Name'
                          inputID='lastname'
                          input-type='text'
                          input-placeholder='Last Name'
                          inputValue=lastname
                          input-classes='form-control '
                          input-errors=errors.lastname}}
                        </div>
                    </div>
                    <!-- END LAST NAME -->

                    <!-- START EMAIL  ADDRESS -->
                    <div class="form-group">
                        <label class="col-md-4 control-label">Email Address</label>

                        <div class="col-md-5">
                          {{form-group-input
                          label-text='Email'
                          inputID='email'
                          input-type='text'
                          input-placeholder='Email Address'
                          inputValue=email
                          input-classes='form-control '
                          input-errors=errors.email}}
                        </div>
                    </div>
                    <!-- END EMAIL  ADDRESS -->

                    <!-- START EMPLOYEE ID -->
                    <div class="form-group">

                        <label class="col-md-4 control-label">Employee ID</label>

                        <div class="col-md-5">
                          {{form-group-input
                          label-text='Employee ID'
                          inputID='employeeID'
                          input-type='text'
                          input-placeholder='Employee ID'
                          inputValue=employeeID
                          input-classes='form-control'
                          input-errors=errors.employeeID}}
                        </div>
                    </div>
                    <!-- END EMPLOYEE ID -->

                    <!-- START ROLES -->
                    <div class="form-group">
                        <!-- TODO Pull the roles from the database -->
                        <label class="col-md-4 control-label">Role</label>
                        <div class="col-md-5">
                          {{view "select"
                          content=roles
                          optionValuePath="content.id"
                          optionLabelPath="content.title"
                          value=currentRole.id
                          classNames='form-control'}}
                        </div>
                    </div>
                    <!-- END ROLES -->

                    <!-- START STATUS -->
                    <div class="form-group">
                        <!-- TODO Pull the roles from the database -->
                        <label class="col-md-4 control-label">Status</label>
                        <div class="col-md-5">
                            <select class="form-control" name="status">
                                <option value="pending">Pending</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                                <option value="declined">Declined</option>
                            </select>
                        </div>
                    </div>
                    <!-- END STATUS -->

                    <!-- START DEPARTMENTS -->
                    <!-- TODO Implement departments
                    <!-- END DEPARTMENTS -->
                </div>
            </form>
        </div>
        <div class="modal-footer">
            {{close-button action='close'}}
            {{save-button action='save'}}
        </div>
