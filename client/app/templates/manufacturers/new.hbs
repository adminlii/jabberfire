  {{! START BREADCRUMBS }}
  {{#jf-page-breadcrumbs}}
    {{#jf-page-breadcrumb}}{{#link-to 'manufacturers.list'}}Manufacturers{{/link-to}}{{/jf-page-breadcrumb}}
    {{#jf-page-breadcrumb}}{{#link-to 'manufacturers.new'}}New Manufacturer{{/link-to}}{{/jf-page-breadcrumb}}
