
{{page-title title=model.title}}

{{#page-header title=model.title page_actions=page_actions}}

  {{page-breadcrumb this-page=model.title}}

  {{#page-actions}}
    {{page-actions-li title='Edit' link='#'}}
    {{page-actions-li title='Delete' link='#'}}
  {{/page-actions}}

{{/page-header}}


<div class="row">
    <div id="manufacturers-list" class="col-md-12">
        <h4>Details:</h4>
        {{model.description}}
    </div>
  </div>
<div class="row">

  <div class="col-md-12">
    <div class="table-scrollable">
        <table class="table table-striped table-bordered table-advance table-hover">
            <thead>
            <tr>
                <th>Model</th>
                <th class="hidden-xs"> Contact</th>
                <th> Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
          {{#each asset in model.assets}}

                <tr>
                <td class="highlight">
                    <div class="success">
                    </div>
                    <a href="#">
                      {{asset.model}}
                    </a>
                </td>
                <td >
                    {{asset.tag}}
                </td>
                <td>
                    {{asset.status}}
                </td>
            </tr>
          {{/each}}
            </tbody>
        </table>
    </div>
    </div>
</div>