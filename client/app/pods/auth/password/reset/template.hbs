<div class="vertical-center">

    <div class="portlet light bordered container">
        <div class="logo">
          {{jf-img src='img/ccmh/logo_large.png' class="logo"}}
        </div>
        <div class="portlet-body form">
          {{outlet 'sent'}}
          {{#if has-error}}
              <div class="note note-danger">
                  <h4 class="block">Error!</h4>
                  <p>
                      The password fields must match. Your new password needs to be at least 8 characters long.
                  </p>
              </div>
          {{/if}}
            <form role="form">
                <div class="form-body">
                        <div id='password' class="form-group form-md-line-input form-md-floating-label">
                            <div class="input-icon right">
                              {{input type='password' class='form-control' value=password}}
                                <label for="form_control_1">Password</label>
                                <span class="help-block"></span>
                                <i class="icon-key"></i>
                            </div>
                        </div>
                        <div id='passwordConfirmation' class="form-group form-md-line-input form-md-floating-label">
                            <div class="input-icon right">
                              {{input type='password' class='form-control' value=passwordConfirmation}}
                                <label for="form_control_1">Confirm Password</label>
                                <span class="help-block"></span>
                                <i class="icon-key"></i>
                            </div>
                        </div>

                </div>
                <div class="form-actions noborder">
                    <div class="form-actions noborder pull-right">
                        <button type="button" class="btn green btn-sm" {{action 'didTouchUpOnReset'}}>Reset</button>
                    </div><div class="form-actions noborder pull-right">
                  {{#link-to 'auth.login'}}<button type="button" class="btn blue btn-sm" style="margin-right: 10px;" >Cancel</button>{{/link-to}}
                </div>
                    </div>
            </form>
        </div>
    </div>
</div>