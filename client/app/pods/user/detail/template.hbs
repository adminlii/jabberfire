    {{#jf-row}}
        <!-- PORTLET MAIN -->
        <div class="col-md-8">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h3 class="panel-title">Details</h3>
                </div>
                <!-- List group -->
                <ul class="list-group">
                    <li class="list-group-item">Username <span class="pull-right">{{user.username}}</span></li>
                    <li class="list-group-item">Email <span class="pull-right"><a id="email" data-type="text" data-pk="1"  data-title="Enter email">{{user.email}}</a></span></li>
                    <li class="list-group-item">Employee ID <span
                            class="pull-right"><a id="employee_id" data-type="text" data-pk="1"  data-title="Enter Employee ID">{{user.employee_id}}</a></span></li>
                    <li class="list-group-item">Status <span class="pull-right"> {{jf-status-button
                    status=user.status
                    user_id=user.id
                    action='didTouchUpOnChangeStatus'}}</span>
                    </li>
                    <li class="list-group-item">roles<span
                            class="pull-right"> {{jf-role-button
        role=user.role
        user_id=user.id
        action='didTouchUpOnChangeRole'}}
    </span>
                    </li>

                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h3 class="panel-title">Departments</h3>
                </div>
                <!-- List group -->
                <ul class="list-group">

                  {{#if user.departments}}
                    {{#each department in selectedDepartmentsObserver}}
                        <li class="list-group-item">
                            {{#if editing}}
                            <a{{action 'didTouchUpOnRemoveDepartment' department}} class="btn btn-icon-only btn-circle red" style="height: 20px; width: 20px;padding-top: 3px;padding-left: 0px;"><span class="md-click-circle md-click-animate" ></span>
                                <i class="fa fa-remove" style="height: 16px"></i>
                            </a>
                            {{/if}}
                            <button type="button" class="btn default btn-xs">
                                <span class="md-click-circle md-click-animate"></span>
                              {{#each dept in department}}
                                {{dept.name}}{{#unless dept.last}}{{fa-icon icon='arrow-right'}}{{/unless}}
                              {{/each}}
                            </button>
                        </li>
                    {{/each}}

                    {{else}}
                        <li class="list-group-item">You do not belong to any departments.</li>
                    {{/if}}
                    {{#if editing}}
                        <li class="list-group-item" style="height: 50px;">
                            <div class="col-md-11"style="padding-right: 5px">

                              {{#ember-chosen multiple=true id='department_select' value=multipleSelectValue }}
                                {{#each department in options}}
                                    <option {{bind-attr value=department.id}}>{{department.name}}</option>
                                {{/each}}
                              {{/ember-chosen}}
                            </div>
                            <div class="col-md-1" style="padding-left: 0px">
                                <a{{action 'didTouchUpOnAddDepartment'}}
                                        class="btn btn-icon-only green " style="height: 29px; width: 29px;">
                                    <i class="fa fa-plus"></i>
                                </a>

                            </div>

                        </li>
                    {{/if}}

                </ul>
            </div>
        </div>


