
{{#jf-page id='user'}}
  {{#jf-page-title}}{{user.fullname}}'s Info{{/jf-page-title}}
  {{#jf-page-bar}}
    {{#jf-page-actions}}
      {{#jf-page-action-button}}
          Actions {{fa-icon icon='angle-down'}}
      {{/jf-page-action-button}}
      {{#jf-page-action-list}}
        {{#jf-page-action}}
          {{#if editing}}
              <a {{action 'didTouchUpOnEndEditing'}}>Stop Editing</a>
          {{else}}
              <a {{action 'didTouchUpOnStartEditing'}}>Edit User</a>
          {{/if}}
        {{/jf-page-action}}
        {{#jf-page-action}}
          <a {{action 'didTouchUpOnForcePasswordChange'}}>Force Password Change</a>
        {{/jf-page-action}}
      {{/jf-page-action-list}}
    {{/jf-page-actions}}
  {{/jf-page-bar}}
  <!-- END PAGE HEADER-->
